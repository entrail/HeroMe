<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.horstmann.herome.Fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hero_bg_gradient"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#253748"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topbannerbar" />

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:baselineAlignBottom="false"
            app:srcCompat="@drawable/heroes" />

        <Button
            android:id="@+id/button_gotItByAccident"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/lightning"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/button_gotitbyaccident"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/button_bornWithIt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/rocket"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/button_bornwithit"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/button_mutation"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/atomic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/button_mutation"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/button_choose"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_solidbutton"
            android:backgroundTint="#FAC740"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/button_choosepower"
            android:textColor="#10161D"
            android:textSize="22dp" />

    </LinearLayout>

</FrameLayout>
